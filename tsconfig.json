{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "http/*": [
        "./src/http/*"
      ], // Corrigido o ponto extra
      "environment/*": [
        "./src/environments/*"
      ],
      "useCase/*": [
        "./src/useCase/*"
      ],
      "helpers/*": [
        "./src/helpers/*"
      ],
      "tests/*": [
        "./src/tests/*"
      ]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}